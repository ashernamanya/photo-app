<html lang="en">
  <head>
     <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
<%= render 'shared/errors', obj: @comment %>
</hr>
</br>
<p> Comment on this article </p></br>
<div class='row'>

<div class='col-xs-12'>

<%= form_for [ @article, @comment ] do |f| %>

<div class="form-group">

<div class="control-label col-sm-2">

<%= f.label :@username %>
</div>

<div class="col-sm-4">

<%= f.text_field :name, class: "form-control", placeholder: "Type your name", autofocus: true %>

</div>

</div>

<div class="form-group">

<div class="control-label col-sm-2">

<%= f.label :@comment%>

</div>

<div class="col-sm-3">

<%= f.text_area :body, rows:0, class: "form-control", placeholder: "Type a comment" %>

</div>

<div class="form-group">

<div class="col-sm-offset-2 col-sm-10">

<%= f.submit class: 'btn btn-primary btn-lg' %>

</div>

</div>

</div>

<% end %>
    
    
    
    
    
    
    
    
