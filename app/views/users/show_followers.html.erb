<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
<div class="container">
<h1 align="center"><%= @user.username%>'s Profile</h1>
<h5 align ="center">Country: <%= @user.country%></h5>
<h5 align="center"> First Name: <%= @user.first_name%></h5><h5 align ="center"</h5> Last Name: <%=@user.last_name%></h5>
<h5 align="center"> Email: <%= @user.email %></h5>
</container>

<div class="row">

<div class="col-md-4 col-md-offset-4 center">

<%= gravatar_for @user, size: 100 %>

</div>

</div>

<h4 align="center"><%= @user.username%>'s Articles</h4>
<% if current_user.following?(@user) %>
<h4 align ="center"><%= button_to 'unfollow', relationship_path(user_id: @user.id), method: :delete, :class =>'btn-btn-default-button'%>
                           
  <%else%>
<h4 align ="center"><%= button_to 'Follow', relationships_path(user_id: @user.id), :class => 'btn-btn-primary' %>
  <% end %>   
  </hr></br>
  <%= render partial: 'shared/stats'%>
<div class="center">

</div>

<%#= render 'articles/article', obj: @user_articles %>

<div class="center">

<%#= will_paginate @user_articles %>
</div>


</div>
<script src="/assets/bootstrap.min.js"></script>
<link href="/assets/bootstrap.min.css" media="all" rel="stylesheet" />