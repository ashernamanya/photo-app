<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>

<%= render 'shared/errors', obj: @article %>

<div class='row'>

<div class='col-xs-8'>

<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>

<div class="form-group">

<div class="control-label col-sm-2">
</div>

<div class="col-sm-8">

<%= f.text_field :tittle, class: "form-control", placeholder: "Post tittle", autofocus: true %>

</div>

</div>

<div class="form-group">

<div class="control-label col-sm-2">


</div>

<div class="col-sm-12">

<%= f.text_area :description, rows: 5, class: "form-control", placeholder: "Share Whats on your Mind" %>

</div>

</div>

<div class="form-group">

<div class="row">

<div class="col-sm-offset-2 col-sm-8">
  
</div>

</div>

</div>

<div class="form-group">

<div class="col-sm-offset-2 col-sm-8">

<%= f.submit class: 'btn btn-primary btn-lg' %>

</div>

</div>

<% end %>

<div class="col-xs-4 col-xs-offset-4">

<button><%= link_to " Back to Articles", articles_path %></button> 

</div>

</div>

</div>

